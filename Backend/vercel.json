{
  "version": 2,
  "builds": [
    { "src": "backend/frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/api/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/$1" },
    { "src": "/(.*)", "dest": "/backend/frontend/$1" }
  ]
}
